<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B0A0A"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Logo -->

    <!-- Título -->

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="254dp"
        android:layout_height="141dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo"
        android:src="@drawable/sevillanas_logo" />

    <!-- Campo Correo -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:shadowColor="#FFD700"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Inicio Sesión"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFD700"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <!-- Campo Contraseña -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFD700"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <!-- Botón Iniciar Sesión -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:backgroundTint="#B8860B"
        android:textColor="#000000"
        android:layout_marginTop="24dp" />


    <!-- Texto de registro -->
    <TextView
        android:id="@+id/registerPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si no se ha registrado regrese para registrarse"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal" />

    <!-- Botón Registrarse -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:backgroundTint="#B8860B"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

</LinearLayout>

